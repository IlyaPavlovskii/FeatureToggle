<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name="io.github.ilyapavlovskii.feature.toggle.sample.FeatureToggleSampleApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FeatureToggle"
        tools:targetApi="31">
        <activity
            android:name="io.github.ilyapavlovskii.feature.toggle.sample.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.FeatureToggle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.ilyapavlovskii.feature.toggle.debug.panel.DebugPanelActivity"
            android:exported="true"
            android:icon="@mipmap/ic_debug_panel_launcher"
            android:label="@string/debug_panel__short_label"
            android:launchMode="singleTask"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>